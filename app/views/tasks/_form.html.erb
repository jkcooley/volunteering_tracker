<%= form_with model: task do |form| %>
    <div>
      <%= form.label :task %><br>
      <%= form.text_field :blurb %>
      <% task.errors.full_messages_for(:task).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :blurb %><br>
      <%= form.text_area :blurb %><br>
      <% task.errors.full_messages_for(:blurb).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>